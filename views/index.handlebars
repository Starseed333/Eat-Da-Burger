<div class="container"> 
  <div class="jumbotron"> 
    <img src="/assets/img/burger.jpeg" width ="200" height="200"> 
    <h1> Eat-Da-Burger! </h1>
  </div>

<!-- Available Burgers -->
  {{!-- devour list --}}
  <div class="row">
    

    <div class="col-md-4 col-md-offset-1">
      <div class="panel-panel default">
        <h1>Ready to Eat Burgers</h1>
        <ul class="list-group">
        <!-- Handlebars -->
        {{#each burgers}}
          {{#unless this.devoured}}
          <li class="list-group-item">
            <div class="input-group">
              <p class="lead"> {{this.burger_name}} </p>
              <span class="input-group-btn">
                <!-- Post Method -->
                
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn btn-default btn-lg" type="submit"> DEVOUR IT! </button>
                </form>
              </span>
            </div>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    
    </div>
  </div>

  <!-- Burgers consumed -->
    {{!-- devoured burgers --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <h1>Devoured Burgers</h1>
      <div class="panel panel-default">
        <ul class="list-group">
        <!-- Handlebars -->
        {{#each burgers}}
          {{#if this.devoured}}
          <li class="list-group-item">
            <p class="lead">{{this.burger_name}} </p>
          </li>
          {{/if}}
        {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-10 col-md-offset-1">
    <p class="lead"> Enter the burger you want to eat & click the submit button. </p>
    <!-- Add New Burgers -->
    {{!-- ready burgers --}}
    <!-- Post method -->
    <form class="create-update-form" action="burgers/create" method="POST">
      <div class="form-group">
        <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
      </div>
     <button class="btn btn-default btn-lg" type="submit">Submit!</button>
    </form>
  
  </div>
</div>

